<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="6dip"
    android:id="@+id/chatitem_item">

    <ImageView
        android:id="@+id/chatitem_fotoUsuario"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dip"
        android:contentDescription="TODO"
        android:src="@drawable/foto1" />

    <TextView
        android:id="@+id/chatitem_ultimaMensagem"
        android:layout_width="fill_parent"
        android:layout_height="26dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/chatitem_fotoUsuario"
        android:ellipsize="marquee"
        android:maxLines="1"
        android:text="Description"
        android:textSize="12sp"
        tools:text="dgdfgf" />

    <TextView
        android:id="@+id/chatitem_nomeUsuario"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/chatitem_ultimaMensagem"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toRightOf="@id/chatitem_fotoUsuario"
        android:gravity="center_vertical"
        android:text="Example application"
        android:textSize="16sp"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/chatitem_dataCriacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/chatitem_ultimaMensagem"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:gravity="center_vertical"
        android:text="23:04"
        android:textSize="12sp"
        android:background="@color/colorWhite"
        android:paddingLeft="10dp"/>

</RelativeLayout>

